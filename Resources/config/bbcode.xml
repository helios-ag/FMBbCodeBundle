<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
        <parameter key="fm_bbcode.twig.extension.class">FM\BbcodeBundle\Templating\BbcodeExtension</parameter>
        <parameter key="fm_bbcode.templating.helper.class">FM\BbcodeBundle\Templating\Helper\BbcodeHelper</parameter>
        <parameter key="fm_bbcode.translation.loader.json.class">FM\BbcodeBundle\Translation\Loader\JsonFileLoader</parameter>
    </parameters>

	<services>
        <service id="fm_bbcode.twig.extension" class="%fm_bbcode.twig.extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="fm_bbcode.decoda_manager"/>
        </service>

        <service id="fm_bbcode.templating.helper" class="%fm_bbcode.templating.helper.class%">
            <tag name="templating.helper" alias="bbcode" />
            <argument type="service" id="fm_bbcode.decoda_manager"/>
        </service>

        <service id="fm_bbcode.decoda_manager" class="FM\BbcodeBundle\Decoda\DecodaManager">
            <argument type="service" id="file_locator"/>
            <argument type="service" id="fm_bbcode.translation.loader.json" />
            <argument type="collection">
                <argument key="filters">%fm_bbcode.config.filters%</argument>
                <argument key="hooks">%fm_bbcode.config.hooks%</argument>
                <argument key="messages">%fm_bbcode.config.messages%</argument>
                <argument key="templates">%fm_bbcode.config.templates%</argument>
                <argument key="emoticonpath">%fm_bbcode.config.emoticonpath%</argument>
                <argument key="extraemoticonpath">%fm_bbcode.config.extraemoticonpath%</argument>
                <argument key="filter_sets">%fm_bbcode.filter_sets%</argument>
            </argument>
        </service>

        <service id="fm_bbcode.translation.loader.json" class="%fm_bbcode.translation.loader.json.class%">
            <argument type="service" id="file_locator"/>
        </service>
	</services>

</container>
